# Renommez ce fichier en .env et ajustez les variables selon vos besoins
# Configuration de l'API
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# URL d'Ollama (par défaut: localhost)
OLLAMA_API_URL=http://localhost:11434

# Configuration de sécurité
# Définissez un secret pour sécuriser l'application (utilisez une chaîne aléatoire)
SECRET_KEY=votre_cle_secrete_a_changer

# Origines CORS autorisées (séparées par des virgules)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000